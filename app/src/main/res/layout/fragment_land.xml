<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Fragment1">


    <TextView
        android:id="@+id/sech1"
        android:layout_width="81dp"
        android:layout_height="43dp"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal"
        android:text="Search"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toEndOf="@+id/sechET1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sechET1"
        android:layout_width="256dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Search What?"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/LRv1"
        android:layout_width="338dp"
        android:layout_height="315dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Ltrans"
        android:layout_width="365dp"
        android:layout_height="120dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="45dp"
        android:background="#FFA07A"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/LRv1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Lsentence"
        android:layout_width="365dp"
        android:layout_height="250dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="16dp"
        android:background="#FFA07A"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/LRv1" />


</androidx.constraintlayout.widget.ConstraintLayout>